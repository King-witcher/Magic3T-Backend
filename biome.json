{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noDefaultExport": "off",
        "noUselessElse": "error",
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "useTemplate": "info"
      },
      "correctness": {
        "useExhaustiveDependencies": "info",
        "noUnusedImports": "warn"
      },
      "performance": {
        "noDelete": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "noConstEnum": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      }
    }
  },

  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "files": {
    "includes": ["frontend/**/*", "backend/**/*", "!**/dist"]
  }
}
