{
	"version": "2.0.0",
  "inputs": [
    {
      "id": "backend-url",
      "type": "pickString",
      "description": "Select the backend URL",
      "default": "Local",
      "options": [
        {
          "label": "Local",
          "value": "http://localhost:4000"
        },
        {
          "label": "Production",
          "value": "https://api.magic3t.com.br"
        }
      ]
    }
  ],
	"tasks": [
    {
      "label": "vite: dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "frontend",
        "env": {
          "VITE_API_URL": "${input:backend-url}"
        }
      },
      "isBackground": true,
      "icon": {
        "id": "run",
        "color": "terminal.ansiGreen",
      },
      "problemMatcher": [{
        "owner": "vite",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
    },
    {
      "label": "typecheck: backend",
      "detail": "Starts a background tsc --watch that reports all type errors in the VSCode Problems panel.",
      "icon": {
        "id": "eye-watch",
        "color": "terminal.ansiCyan"
      },
      "type": "shell",
      "command": "npx",
      "args": [
        "tsc",
        "--watch",
        "--noEmit",
        "--project",
        "backend/tsconfig.json"
      ],
      "group": "test",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
    },
    {
      "label": "typecheck: frontend",
      "detail": "Starts a background tsc --watch that reports all type errors in the VSCode Problems panel.",
      "icon": {
        "id": "eye-watch",
        "color": "terminal.ansiCyan"
      },
      "type": "shell",
      "command": "npx",
      "args": [
        "tsc",
        "--watch",
        "--noEmit",
        "--project",
        "frontend/tsconfig.json"
      ],
      "group": "test",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
    },


    //////////////// CI Test

    // build backend
    {
      "label": "build: backend",
      "icon": {
        "id": "tools",
        "color": "terminal.ansiWhite"
      },
      "type": "shell",
      "options": {
        "cwd": "backend"
      },
      "command": "npm",
      "args": [
        "run", "build"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // build frontend
    {
      "label": "build: frontend",
      "icon": {
        "id": "tools",
        "color": "terminal.ansiWhite"
      },
      "type": "shell",
      "options": {
        "cwd": "frontend"
      },
      "command": "npm",
      "args": [
        "run", "build"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // npm audit
    {
      "label": "npm audit",
      "icon": {
        "id": "tools",
        "color": "terminal.ansiWhite"
      },
      "type": "shell",
      "command": "npm",
      "args": [
        "audit"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // npm run lint
    {
      "label": "biome lint",
      "icon": {
        "id": "tools",
        "color": "terminal.ansiWhite"
      },
      "type": "shell",
      "command": "npm",
      "args": [
        "run", "lint"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // Build everything
    {
      "label": "build",
      "dependsOn": [
        "build: backend",
        "build: frontend",
        "biome lint",
        "npm audit"
      ],
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "dependsOrder": "parallel"
    }
	]
}
